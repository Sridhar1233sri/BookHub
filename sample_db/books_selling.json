{
  "container": {
    "h1": "Post Your Book Here",
    "form": {
      "id": "bookForm",
      "fields": [
        {
          "label": "Book Title:",
          "input": {
            "type": "text",
            "id": "bookTitle",
            "required": true
          }
        },
        {
          "label": "Book Author Name:",
          "input": {
            "type": "text",
            "id": "bookAuthor",
            "required": true
          }
        },
        {
          "label": "Book Edition:",
          "input": {
            "type": "text",
            "id": "bookEdition",
            "required": true
          }
        },
        {
          "label": "Book Language:",
          "input": {
            "type": "text",
            "id": "bookLanguage",
            "required": true
          }
        },
        {
          "label": "Book Category:",
          "select": {
            "id": "bookCategory",
            "options": [
              "Children",
              "Adult",
              "Scientific",
              "Engineering Books",
              "Novels",
              "NCERT Books"
            ]
          }
        },
        {
          "label": "Book Rate:",
          "input": {
            "type": "number",
            "id": "bookRate",
            "required": true
          }
        },
        {
          "label": "Book Seller Contact Number:",
          "input": {
            "type": "text",
            "id": "bookSellerContact",
            "required": true
          }
        },
        {
          "label": "Book Image:",
          "input": {
            "type": "file",
            "accept": "image/*",
            "capture": "camera",
            "id": "bookImage"
          }
        },
        {
          "button": {
            "type": "button",
            "onclick": "postBook()",
            "text": "Post Book"
          }
        }
      ]
    },
    "img": {
      "id": "previewImage",
      "src": "#",
      "alt": "Book Preview",
      "style": "display: none;"
    }
  }
}
